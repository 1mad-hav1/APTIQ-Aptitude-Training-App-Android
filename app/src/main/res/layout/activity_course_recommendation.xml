<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Course_recommendation">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Enter Your Scores"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/input_openness"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_txt"
                android:hint="Openness"
                android:inputType="numberDecimal"
                android:padding="10dp" />

            <EditText
                android:id="@+id/input_conscientiousness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_txt"
                android:hint="Conscientiousness"
                android:inputType="numberDecimal"
                android:padding="10dp" />

            <EditText
                android:id="@+id/input_extraversion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_txt"
                android:hint="Extraversion"
                android:inputType="numberDecimal"
                android:padding="10dp" />

            <EditText
                android:id="@+id/input_agreeableness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_txt"
                android:hint="Agreeableness"
                android:inputType="numberDecimal"
                android:padding="10dp" />

            <EditText
                android:id="@+id/input_neuroticism"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_txt"
                android:hint="Neuroticism"
                android:inputType="numberDecimal"
                android:padding="10dp" />

            <EditText
                android:id="@+id/input_numerical_aptitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_txt"
                android:hint="Numerical Aptitude"
                android:inputType="numberDecimal"
                android:padding="10dp" />

            <EditText
                android:id="@+id/input_spatial_aptitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_txt"
                android:hint="Spatial Aptitude"
                android:inputType="numberDecimal"
                android:padding="10dp" />

            <EditText
                android:id="@+id/input_perceptual_aptitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_txt"
                android:hint="Perceptual Aptitude"
                android:inputType="numberDecimal"
                android:padding="10dp" />

            <EditText
                android:id="@+id/input_abstract_reasoning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_txt"
                android:hint="Abstract Reasoning"
                android:inputType="numberDecimal"
                android:padding="10dp" />

            <EditText
                android:id="@+id/input_verbal_reasoning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_txt"
                android:hint="Verbal Reasoning"
                android:inputType="numberDecimal"
                android:padding="10dp" />

            <Button
                android:id="@+id/btn_predict"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_txt"
                android:padding="10dp"
                android:text="Predict Course" />

            <TextView
                android:id="@+id/text_result"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_txt"
                android:text="Prediction Result Will Appear Here"
                android:textSize="16sp"
                android:textStyle="bold"
                />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>